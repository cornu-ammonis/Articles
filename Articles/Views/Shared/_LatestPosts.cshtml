@model IList<Articles.Core.Post>

<div class="sidebar">
    <h3>Recent Posts </h3>
    
    @if (Model.Count > 0 )
    {
        <ul>
            @foreach (var post in Model) {
            
                
              <li>  @Html.PostLink(post) </li>
                

            } 
        </ul>
    }
    else
    {
        <p>No posts found</p>
    }
</div>
